           document.querySelectorAll(".service-card-2 .title a").forEach(item => {
               item.addEventListener("click", function (event) {
                   event.preventDefault();
   
                   let serviceTitle = this.textContent.trim();
                   if (serviceData[serviceTitle]) {
                       // Update Main Heading (h2)
                       let sectionTitle = document.querySelector(".section-title");
                       if (sectionTitle) {
                           sectionTitle.innerHTML = serviceData[serviceTitle].heading;
                       }
                       
                       // Update p Tag Description
                       let sectionDesc = document.querySelector(".service-left-area p");
                       if (sectionDesc) {
                           sectionDesc.innerHTML = serviceData[serviceTitle].description;
                       }

                       let sectionTitle2 = document.querySelector(".section-heading h5");
                       if (sectionTitle2) {
                           sectionTitle2.innerHTML = serviceData[serviceTitle].heading;
                       }
                   }
               });
           });
       });
